<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<android.support.v4.view.ViewPager
	    android:id="@+id/home_vp_home"
	    android:layout_width="match_parent"
	    android:layout_height="254dp" />
	
	<TextView
	    android:id="@+id/home_tv_productcategories"
	    android:layout_width="match_parent"
	    android:layout_height="27dp"
	    android:gravity="center"
	    android:layout_below="@id/home_vp_home"
	    android:background="#45B276"
	    android:textColor="#FFFFFF"
	    android:text="@string/lbl_home_productcategories" />
	
	<com.lancer.ecomm.utils.HorizontalListView
	    android:layout_width="match_parent"
	    android:layout_height="114dp"
	    android:layout_below="@id/home_tv_productcategories"
	    android:background="#000000" />
	
</RelativeLayout>